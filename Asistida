    private void botonActionPerformed(java.awt.event.ActionEvent evt) {                                      
    int caja1, caja2, caja3, cajaHoras, precio, perroN;
     caja1=Integer.parseInt(aCaja1.getText());
     caja2=Integer.parseInt(aCaja2.getText());
     caja3=Integer.parseInt(aCaja3.getText());
     cajaHoras=Integer.parseInt(aCajaHoras.getText());
     perroN = caja1+caja2+caja3;
    int pre1, pre2, pre3;
   pre1=caja1*10000; 
   pre2=caja2*5000;
   pre3=caja3*3000;
   precio= (pre1+pre2+pre3) *cajaHoras;
   if (perroN>1){
       precio=(int)(precio-(precio*0.1));
   }
       JOptionPane.showMessageDialog(null, precio);
    }                                     

